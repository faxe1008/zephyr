# LD2410 hilink radar sensor Configuration options

# Copyright (c) 2021 Linumiz
# SPDX-License-Identifier: Apache-2.0

menuconfig LD2410
	bool "LD2410 radar sensor"
	default y
	depends on DT_HAS_HILINK_LD2410_ENABLED
	depends on SERIAL
	select RING_BUFFER
	help
	  Enable driver for LD2410 Radar Sensor.

if LD2410

choice
	prompt "Trigger mode"
	default LD2410_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config LD2410_TRIGGER_NONE
	bool "No trigger"

config LD2410_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select LD2410_TRIGGER

config LD2410_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select LD2410_TRIGGER

endchoice


config LD2410_TRIGGER
	bool

config LD2410_THREAD_PRIORITY
	int "Thread priority"
	depends on LD2410_TRIGGER_OWN_THREAD && LD2410_TRIGGER
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config LD2410_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on LD2410_TRIGGER_OWN_THREAD && LD2410_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # LD2410